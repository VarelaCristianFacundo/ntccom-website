---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Feature from '../components/blocks/features/FeatureSticky.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Data
import featuresData from '../data/json-files/featuresData.json'
// - Feature Categories
const featuresCommunication = featuresData.filter((feature) => feature.category === 'Communication')
const featuresTelecommunication = featuresData.filter((feature) => feature.category === 'Telecommunication')
const featuresSecurity = featuresData.filter((feature) => feature.category === 'Security')
const featuresMobile = featuresData.filter((feature) => feature.category === 'Mobile Communication')
const featuresSoftwareDevelopment = featuresData.filter((feature) => feature.category === 'Software Development')


// Content
// - SEO
const SEO = {
	title: 'NTCcom | Features to Boost Productivity & Security',
	description:
		"Explore NTCcom's powerful features designed to enhance productivity, ensure top-notch security, and integrate seamlessly with your favorite tools. Join thousands of satisfied users and transform your workflow with NTCcom today!"
}
// - Page Header
const header = {
	title: 'Why you and your team will <strong>love</strong> ntccom.',
	text: 'Streamline your tasks, protect your data, and enjoy working with our tools!'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<Feature
	title="Software Development Solutions"
	text="Unlock your business potential with our tailored software development services for web and mobile platforms, designed to meet the specific needs of your industry."
	data={featuresSoftwareDevelopment}
/>
	<Feature
		title="Advanced Communication Solutions for Seamless Business Integration"
		text="Integrate communication channels like voice, SMS, and video into your apps effortlessly with our CPaaS platform. Provide real-time, personalized experiences for your customers without worrying about complex backend infrastructure."
		data={featuresCommunication}
	/>
	<Feature
		title="International Voice Termination Wholesale Services"
		text="NTCâ€™s advanced network offers high-quality, cost-effective international call termination services over direct routes, ensuring clear communication for businesses worldwide."
		data={featuresTelecommunication}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>
	<Feature
		title="Voice and Data Solutions over Secure and Encrypted Networks"
		text="NTC guarantees encrypted, secure voice and data communication between satellite terminals, ensuring the confidentiality and integrity of all transmissions."
		data={featuresSecurity}
	/>
	<Feature
		title="Telecommunication Service for Businesses & Encrypted Mobile"
		text="NTC provides encrypted mobile services and corporate call termination, allowing businesses to communicate with confidence and benefit from secure, affordable solutions."
		data={featuresMobile}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>

	<CTA />
</Layout>
